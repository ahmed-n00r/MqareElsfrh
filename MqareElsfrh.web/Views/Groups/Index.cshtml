@model IEnumerable<DBModels.AppModels.Group>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <a asp-action="Create"><h6>@localizer["Create"]</h6></a>
                    
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">@Html.DisplayNameFor(model => model.Name)</th>
                                    <th class="text-secondary opacity-7"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div>
                                                    <img src="../assets/img/team-2.png" class="avatar avatar-sm me-3" alt="user1">
                                                </div>
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">@item.Name</h6>
                                                    <p class="text-xs text-secondary mb-0">
                                                        @(string.Format(localizer["StudentNum"].Value, item.StudentNumber))
                                                    </p>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="align-middle">
                                            <a class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit user" asp-action="Edit" asp-route-id="@item.Id">@localizer["Edit"]</a> |
                                            <a class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Details user" asp-action="Details" asp-route-id="@item.Id">@localizer["Details"]</a> |
                                            <a class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Delete user" asp-action="Delete" asp-route-id="@item.Id">@localizer["Delete"]</a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

