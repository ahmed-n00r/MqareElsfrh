@{
    var isRTL = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    var en = options.Value.SupportedCultures?.FirstOrDefault();
    var ar = options.Value.SupportedCultures?.LastOrDefault();
    var returnUrl = string.IsNullOrEmpty(Context.Request.Path) ? "~/" : $"~{Context.Request.Path.Value}";
}

<div class="container position-sticky z-index-sticky top-0">
    <div class="row">
        <div class="col-12">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg blur border-radius-lg top-0 z-index-3 shadow position-absolute mt-4 py-2 start-0 end-0 mx-4">
                <div class="container-fluid">
                    <a class="navbar-brand font-weight-bolder ms-lg-0 ms-3 " asp-controller="Home" asp-action="index">
                        @localizer["ApplictionName"]
                    </a>
                    <button class="navbar-toggler shadow-none ms-2" type="button" data-bs-toggle="collapse" data-bs-target="#navigation" aria-controls="navigation" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon mt-2">
                            <span class="navbar-toggler-bar bar1"></span>
                            <span class="navbar-toggler-bar bar2"></span>
                            <span class="navbar-toggler-bar bar3"></span>
                        </span>
                    </button>
                    <div class="collapse navbar-collapse" id="navigation">
                        <ul class="navbar-nav mx-auto">
                           
                            <li class="nav-item">
                                <a class="nav-link me-2" asp-area="Identity" asp-page="/Account/Register">
                                    <i class="fas fa-user-circle opacity-6 text-dark me-1"></i> @localizer["SignUp"]
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link me-2" asp-area="Identity" asp-page="/Account/Login">
                                    <i class="fas fa-key opacity-6 text-dark me-1"></i> @localizer["SignIn"]
                                </a>
                            </li>
                        </ul>

                        <ul class="navbar-nav d-lg-block d-none">
                            <li class="nav-item">
                                <a class="btn btn-sm mb-0 me-1 btn-primary"asp-controller="Home" asp-action="SetLanguage" asp-route-returnUrl="@returnUrl"
                                   asp-route-culture="@(isRTL ? en.Name : ar.Name)"> @(isRTL ? en.NativeName : ar.NativeName)
                               </a>
                            </li>
                        </ul>
                        
                    </div>
                </div>
            </nav>
            <!-- End Navbar -->
        </div>
    </div>
</div>