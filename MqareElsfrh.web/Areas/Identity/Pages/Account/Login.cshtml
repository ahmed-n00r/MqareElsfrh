@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    var isRTL = CultureInfo.CurrentCulture.Name.StartsWith("ar");
}

<section>
    <div class="page-header min-vh-100">
        <div class="container">
            <div class="row">
                <div class="col-xl-4 col-lg-5 col-md-7 d-flex flex-column mx-lg-0 mx-auto">
                    <div class="card card-plain">
                        <div class="card-header pb-0 @(isRTL ? "text-end" : "text-start")">
                            <h4 class="font-weight-bolder">@localizer["SignIn"]</h4>
                            <p class="mb-0">
                                @string.Format(localizer["LogInMasseg1"].Value ,@localizer["Email"].Value,@localizer["Password"].Value,@localizer["SignIn"].Value)
                            </p>
                        </div>
                        <div class="card-body">
                            <form role="form" id="account" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                <div class="mb-3">
                                    <input type="email" asp-for="Input.Email" class="form-control form-control-lg"
                                    placeholder="@localizer["Email"]" aria-label="@localizer["Email"]">
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <input type="Password" asp-for="Input.Password" class="form-control form-control-lg" placeholder="@localizer["Password"]" aria-label="@localizer["Password"]">
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="form-check form-switch">
                                    <input asp-for="Input.RememberMe" class="form-check-input" type="checkbox" id="rememberMe">
                                    <label class="form-check-label" for="rememberMe" style=" @(isRTL ? "margin-right: 3.5rem" : "")">@localizer["RememberMe"]</label>
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-lg btn-primary btn-lg w-100 mt-4 mb-0">@localizer["SignIn"]</button>
                                </div>
                            </form>
                        </div>
                        <div class="card-footer text-center pt-0 px-lg-2 px-1">
                            <p class="mb-4 text-sm mx-auto">
                                @localizer["LogInMasseg2"]
                                <a asp-area="Identity" asp-page="/Account/Register" class="text-primary text-gradient font-weight-bold">@localizer["SignUp"]</a>
                            </p>
                        </div>
                    </div>
                </div>

                
                <div class="col-6 d-lg-flex d-none h-100 my-auto pe-0 position-absolute top-0 @(isRTL ? "start-0" : "end-0") text-center justify-content-center flex-column">
                    <div class="position-relative bg-gradient-primary h-100 m-3 px-7 border-radius-lg d-flex flex-column justify-content-center overflow-hidden" style="background-image: url('http://drive.google.com/uc?export=view&id=1XvZrWPYpcDn8bvJdOOUFa3T58U59GV7n');
          background-size: cover;">
                        <span class="mask bg-gradient-primary opacity-6"></span>
                        <h4 class="mt-5 text-white font-weight-bolder position-relative">"Attention is the new currency"</h4>
                        <p class="text-white position-relative">The more effortless the writing looks, the more effort the writer actually put into the process.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
